{
  "name": "typescript-npm-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate for NPM modules using TypeScript",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sbstjn/typescript-npm-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/sbstjn/typescript-npm-boilerplate/issues"
  },
  "homepage": "https://github.com/sbstjn/typescript-npm-boilerplate",
  "scripts": {
    "test": "jest --forceExit",
    "test:cover": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint {src,test}/**/*.ts",
    "build": "tsc",
    "prebuild": "rimraf ./dist",
    "dev": "ts-node ./src/server.ts",
    "prod": "tsc && node ./dist/server.js"
  },
  "keywords": [
    "typescript",
    "npm",
    "boilerplate",
    "library"
  ],
  "author": "Sebastian MÃ¼ller <mail@sbstjn.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.10.47",
    "@types/supertest": "^2.0.7",
    "coveralls": "^2.13.1",
    "dot-json": "^1.0.3",
    "dotenv": "^7.0.0",
    "envalid": "^5.0.0",
    "jest": "^20.0.4",
    "mongoose": "^5.5.4",
    "rimraf": "^2.6.2",
    "supertest": "^4.0.2",
    "ts-jest": "^20.0.14",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "@types/mongoose": "^5.3.27",
    "express": "^4.16.4",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.32"
  }
}
